[Unit]
Description=DDNi ETCD monitoring service
Documentation=https://www.kernel.org/

[Service]
Type=simple
User=root
Group=root
TimeoutStartSec=0
Restart=on-failure
RestartSec=30s
ExecStart=/opt/ddnmon/scripts/etcd_failover.sh {{ hostip }} {{ remoteip }} {{ remotehostname }}

[Install]
WantedBy=multi-user.target
